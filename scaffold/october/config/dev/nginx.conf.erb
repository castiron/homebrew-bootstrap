map $http_origin $cors_header {
  default "";
  "~^https?://[^/]+\.((cichq\.com)|(lvh))(:[0-9]+)?$" "$http_origin";
}

server {
  access_log <%= log_dir %>/nginx.access.log combined;
  listen 80;
  listen 443 ssl;

  server_name <%= name %>.<%= tld.strip %>;
  root <%= root %>/www;

  ssl_certificate <%= root %>/config/dev/ssl/<%= name %>.<%= tld.strip %>.crt;
  ssl_certificate_key <%= root %>/config/dev/ssl/<%= name %>.<%= tld.strip %>.key;
  ssl_protocols SSLv2 SSLv3 TLSv1;
  ssl_ciphers HIGH:!aNULL:!MD5;
  ssl_prefer_server_ciphers on;
  ssl_session_timeout 10m;

  client_max_body_size 100M;
  client_body_timeout 600s;
  proxy_send_timeout 600s;
  proxy_read_timeout 600s;
  fastcgi_no_cache 1;
  error_page 500 502 503 504 /50x.html;

  add_header Access-Control-Allow-Origin $cors_header;

  if ($host ~* "www") {
    rewrite ^(.*)$ http://<%= server_name %>$1 permanent;
    break;
  }

  location ~ \.php$ {
    fastcgi_pass unix:<%= socket_dir %>/webapp;
    fastcgi_param QUERY_STRING    $query_string;
    fastcgi_param REQUEST_METHOD    $request_method;
    fastcgi_param CONTENT_TYPE    $content_type;
    fastcgi_param CONTENT_LENGTH    $content_length;
    fastcgi_param SCRIPT_NAME   $fastcgi_script_name;
    fastcgi_param SCRIPT_FILENAME <%= root %>/www$fastcgi_script_name;
    fastcgi_param SERVER_NAME $host;
    fastcgi_param HTTPS 'on';

    fastcgi_param REQUEST_URI   $request_uri;
    fastcgi_param DOCUMENT_URI    $document_uri;
    fastcgi_param DOCUMENT_ROOT   $document_root;
    fastcgi_param SERVER_PROTOCOL   $server_protocol;

    fastcgi_param GATEWAY_INTERFACE CGI/1.1;
    fastcgi_param SERVER_SOFTWARE   nginx/$nginx_version;

    fastcgi_param REMOTE_ADDR   $remote_addr;
    fastcgi_param REMOTE_PORT   $remote_port;
    fastcgi_param SERVER_ADDR   $server_addr;
    fastcgi_param SERVER_PORT   $server_port;
    fastcgi_param SERVER_NAME   $server_name;

    fastcgi_param REDIRECT_STATUS   200;

    fastcgi_index index.php;
    fastcgi_read_timeout 3600s;
    client_body_timeout 3600s;
    send_timeout 3600s;
    fastcgi_buffers 16 16k;
    fastcgi_buffer_size 32k;

    # Mimic Apache params for PHP
    fastcgi_param HTTPS on;
  }

  location / {
    index index.html index.htm index.php;
    try_files $uri $uri/ /index.php$is_args$args;

    # This is a super-basic way to allow ALL cross-origin requests.
    # Obviously, you probably don't want this in production. Instead, target
    # your allowed cross-origin domains with `map{}` or similar
    add_header Access-Control-Allow-Origin $http_origin;
  }

  # October-recommended blacklist. Since we scope the web root
  # to www and use symlinks, most of the recommended blacklist items
  # aren't needed (http://octobercms.com/docs/help/installation#webserver-configuration)
  rewrite ^themes/.*/(layouts|pages|partials)/.*.htm /index.php break;
  rewrite ^storage/app/uploads/protected/.* /index.php break;

}

